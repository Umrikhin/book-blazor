            new Phone() { Id = 3, TypePhone = "Рабочий", NumberPhone = "2355050" }
        }
    };
    string Status { get; set; } = "Кнопка еще не нажата!";
    List<Tenant> tenants = new List<Tenant>();

    protected override void OnInitialized()
    {
        tenants.Add(new Tenant()
